
@{
    ViewBag.Title = "ReporteSimple";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {

        //BOTON INCRUSTAR REPORTE
        $("#btnIncrustar").on("click", function () {
            $("#reportSimple").attr("src", "VerReporte").load();
        });

        //BOTON DESCARGAR REPORTE
        $("#btnDescargar").on("click", function () {
            window.open("VerReporte");
        });

    });

</script>

<h2>Reporte</h2>
<hr />
<input type="button" id="btnIncrustar" value="Ver Reportes" class="btn btn-success"/>
<input type="button" id="btnDescargar" value="Descargar Reportes" class="btn btn-warning" />

<hr />

<iframe id="reportSimple" style="width:100%; height:600px;" frameborder="0" scrolling="yes">

</iframe>