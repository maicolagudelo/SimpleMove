@model SimpleMove.Models.usuarios
@{

    Layout = "~/Views/Shared/_Layout_login.cshtml";

}




<div class="limiter">
    <div class="container-login100" style="background: linear-gradient(-135deg, #7db6f1, #64a19d); " >
        <div class="wrap-login100" style="padding: 140px 130px 150px 95px; background: #512df17a ">

            <div class="login100-pic js-tilt" data-tilt>
                <img src="@Url.Content("~/Content/assets/img/SMLogoShort.png")">
            </div>
            @using (Html.BeginForm("login", "LoginView", FormMethod.Post))
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <form class="login100-form validate-form">
                    <span class="login100-form-title" style="color:white">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid telefono is required: ex@abc.xyz">

                        <input class="input100" type="text" name="telefono" placeholder="Telefono">

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>@Html.ValidationMessageFor(a => a.telefono)
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">

                        <input class="input100" type="password" name="contraseña" placeholder="contraseña">
                        <span class="focus-input100"> @Html.ValidationMessageFor(a => a.contraseña)</span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <input class="login100-form-btn" type="submit" value="Login" style="background: #465765" />
                    <br />

                    <div class="login100-form-btn">
                        <a class="txt2" style="color: white" href="@Url.Action("Registro", "LoginView")">
                            Registrarse

                        </a>
                    </div>
                    
                </form>
             }
        </div>
    </div>
</div>



