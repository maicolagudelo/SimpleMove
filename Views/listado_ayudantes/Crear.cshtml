@model SimpleMove.Models.listado_ayudantes

@{
    Layout = "~/Views/Shared/_Layout_ayudantes.cshtml"; ;
}


<section class="full-box dashboard-contentPage">
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles">Crear Publicacion </h1>
        </div>
    </div>

        @using (Html.BeginForm("Crear","listado_ayudantes",FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="font-family:'Arial Rounded MT'">

                
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" style="font-size:20px;color:black">Nombre</label>
                <div class="col-md-10">
                    <br />
                    <!--<form action="/" method="post">
                        <input type="number" name="telefono" value="@long.Parse(Session["UserTelefono"].ToString())" disabled>
                    </form>-->
                    
                    
                    @Html.DropDownList("telefono", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                </div>
            </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-size:20px;color:black">Descripcion</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-size:20px;color:black">Costo</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-size:20px;color:black">Medio Informacion</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.medioInfo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.medioInfo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-size:20px;color:black">Activo</label>
                    <div class="col-md-10">
                        <br />
                            @Html.EditorFor(model => model.estado)
                            @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="font-size:20px;color:black">Imagen</label>
                    <div class="col-md-10">
                        <br />
                        @*Html.EditorFor(model => model.img, new { htmlAttributes = new { @class = "form-control" } })*@
                    <i class="fa-solid fa-file-circle-plus"></i><input type="file" name="name" required />
                        @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                    </div>
                </div>
                

                <p class="text-center">
                    <button href="#!" class="btn btn-info btn-raised btn-sm">Crear</button>
                    <button href="#!" class="btn btn-info btn-raised btn-sm" style="background-color: #96FEF3 ">| @Html.ActionLink("Atras", "Crear") |</button>
                </p>
            </div>
        }

        
</section>