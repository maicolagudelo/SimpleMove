@model IEnumerable<SimpleMove.Models.listado_conductores>

@{
    ViewBag.Title = "Index";
}


<div>
    <h2>Conductores Disponibles</h2>
</div>



<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="album py-5 bg-light">
                    <div class="container">

                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                            <div class="col">
                                <div class="card shadow-sm">

                                    <div class="card-body">
                                        <h3>@Html.DisplayFor(modelItem => item.usuarios.nombre)</h3>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.usuarios.email)</p>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.descripcion)</p>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">

                                                <button type="button" class="btn btn-sm btn-outline-secondary">| @Html.ActionLink("Detalles", "Calificacion", new { id = item.codigo }) |</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
