@model SimpleMove.Models.listado_conductores

@{
    ViewBag.Title = "Calificacion";
    Layout = "~/Views/Shared/_Layout_clientes.cshtml";
}
<section class="full-box dashboard-contentPage">
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles">Ayudantes Disponibles </h1>
        </div>
    </div>



    <dl class="dl-horizontal">
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="text-center">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        <div class="col">
                            <div class="card shadow-sm" , style="padding:10px; margin-left:60px">

                                <div class="card-body" , style="margin-top:20px">
                                    <h4 style="font-family:'Arial Rounded MT'">
                                        NOMBRE:
                                    </h4>
                                    <h4>@Html.DisplayFor(model => model.usuarios.nombre)</h4>

                                    <h4 style="font-family:'Arial Rounded MT'">
                                        DESCRIPCIÓN:
                                    </h4>
                                    <h4>@Html.DisplayFor(model => model.descripcion)</h4>

                                    <h4 style="font-family:'Arial Rounded MT'">
                                        COSTO DEL SERVICIO
                                    </h4>
                                    <h4>@Html.DisplayFor(model => model.costo)</h4>

                                    <h4 style="font-family:'Arial Rounded MT'">
                                        MEDIO DE INFORMACIÓN:
                                    </h4>
                                    <h4> @Html.DisplayFor(model => model.medioInfo)</h4>

                                </div>


                                <button href="#!" class="btn btn-info btn-raised btn-sm" style="background-color: #96FEF3 ">| @Html.ActionLink("Atras", "Listado") |</button>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </dl>



    <div class="container-fluid">
        <br />
        <div class="col-md-2"></div>

        <div class="col-md-6" style="margin-left: 17px;">
            </p>
            <hr />
            Calificar: <span> <input type="text" /> <input type="submit" value="Enviar"> </span>
            <hr />
        </div>

        <div class="col-md-2"></div>

    </div>
</section>