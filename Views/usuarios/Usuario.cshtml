@model IEnumerable<SimpleMove.Models.usuarios>

@{
    Layout = "~/Views/Shared/_Layout_administrador.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usuario</title>
</head>
<body>

    <section class="full-box dashboard-contentPage">

        <!-- Content page -->
        <div class="container-fluid">
            <div class="page-header">
                <h1 class="text-titles"><i class="zmdi zmdi-account zmdi-hc-fw"></i> Listado <small>Usuarios</small></h1>
                @Html.ActionLink("Create Nuevo usuario", "Create")
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="nav nav-tabs" style="margin-bottom: 15px;">
                        <li class="active"><a href="#list" data-toggle="tab">usuarios</a></li>

                    </ul>

                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade active in" id="list">
                            <div class="table-responsive">
                                <table class="table table-hover text-center">
                                    <thead>
                                        <tr>
                                            
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.tipo_usuarios.usuario)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.nombre)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.apellido)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.telefono)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.direccion)
                                            </th>
                                            
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                       @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tipo_usuarios.usuario)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.apellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.telefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.direccion)
                                            </td>
                                            <td></td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.telefono }, new { @class = "editar" })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Detalles", "Details", new { id = item.telefono })
                                            </td>
                                            <td>

                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.telefono })
                                            </td>
                                        </tr>
                                        }
                                        
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

   
    
</body>
</html>
